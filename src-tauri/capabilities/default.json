{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    "sql:allow-load",
    "sql:allow-close",
    "sql:allow-execute",
    "sql:allow-select",
    "store:default",
    "store:allow-get",
    "store:allow-save",
    "store:allow-set",
    "store:allow-clear",
    "store:allow-delete",
    "store:allow-entries",
    "fs:default",
    "dialog:default",
    "dialog:allow-save",
    "fs:allow-app-write",
    "process:default",
    "process:allow-exit",
    "fs:read-all",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$RESOURCE/**" }]
    }

  ]
}